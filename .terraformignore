# Ignore Terraform state files
*.tfstate
*.tfstate.*

# Ignore crash log files
crash.log

# Ignore override files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Ignore variable definition files (.tfvars)
*.tfvars

# Ignore Terraform plan files
*.tfplan

# Ignore hidden directories
.*
!/.terraform

# Ignore local-only files and directories
.local/
*.local
tmp/

# Ignore SSH keys
*.pem
*.pub

# Ignore IDE or editor specific files
.vscode/
.idea/
*.swp
*.bak
*.tmp
